<%- include('../partials/header') %>
    <main class="mb-5">
        <div class="d-flex justify-content-center align-items-center min-vh-97">
            <form class="nueva-tarea-form card p-4">
                <h3 class="mb-4 nueva-tarea-header">
                    🎉 Nueva Tarea 🎉
                </h3>
                <div class="mb-3">
                    <label for="taskName" class="form-label">Nombre de la tarea</label>
                    <input type="text" class="form-control" id="taskName" placeholder="¡Ponle un nombre divertido!"
                        required>
                </div>
                <div class="mb-3">
                    <label for="taskDesc" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="taskDesc" placeholder="¿De qué se trata esta locura?"
                        required>
                </div>
                <div class="mb-3">
                    <label for="taskDetails" class="form-label">Detalles</label>
                    <textarea class="form-control" id="taskDetails" rows="3"
                        placeholder="Agrega todos los detalles chuscos aquí"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning px-5">
                        🚀 Guardar Tarea
                    </button>
                </div>
            </form>
        </div>
    </main>
    <%- include('../partials/footer') %>
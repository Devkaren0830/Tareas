<%- include('../partials/header') %>

    <style>
        /* Estilos generales del cuerpo */
        /* Estilo para el título principal */
        .header-title {
            color: #4C95E1;
            font-size: 2.5rem;
            margin-bottom: 40px;
        }

        /* Contenedor de las tarjetas de tareas */
        .task-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            width: 100%;
            max-width: 1000px;
            margin-top: 10px;
        }

        /* Estilo individual de cada tarjeta */
        .task-card {
            background-color: #2E3B4E;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            width: calc(33% - 20px);
            /* Para 3 tarjetas por fila en escritorio */
            box-sizing: border-box;
            transition: transform 0.3s ease;
        }

        .task-card:hover {
            transform: translateY(-5px);
        }

        /* Estilo del título de la tarea */
        .task-title {
            color: #92E1F4;
            font-size: 1.5rem;
            margin-top: 0;
        }

        /* Estilo de la descripción */
        .task-description {
            color: #A0B3C4;
            font-size: 1rem;
            line-height: 1.5;
        }

        /* Estilo para las fechas */
        .task-dates {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #A0B3C4;
        }

        .task-dates span {
            display: block;
            margin-bottom: 5px;
        }

        .filter-btn {
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .filter-btn.active {
            outline: 2px solid #fff;
            /* borde visible */
            transform: scale(1.05);
            /* un poco más grande */
        }

        .btn_eliminar_tarea {
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 16px;
            cursor: pointer;
        }

        .btn_editar_tarea {
            background-color: #5547aa;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 16px;
            cursor: pointer;
        }


        /* Adaptación para pantallas más pequeñas */
        @media (max-width: 768px) {
            .task-card {
                width: calc(50% - 20px);
                /* 2 tarjetas por fila en tablets */
            }
        }

        @media (max-width: 480px) {
            .task-card {
                width: 100%;
                /* 1 tarjeta por fila en móviles */
            }
        }
    </style>

    <main>
        <div style="display: flex; justify-content: center; gap: 15px; margin-bottom: 30px;">
            <button onclick="separarTareasPorPrioridad(this)" class="filter-btn"
                style="background-color: #6c757d; color: white;">
                Bajo
            </button>
            <button onclick="separarTareasPorPrioridad(this)" class="filter-btn"
                style="background-color: #ffc107; color: #212529;">
                Medio
            </button>
            <button onclick="separarTareasPorPrioridad(this)" class="filter-btn"
                style="background-color: #dc3545; color: white;">
                Alto
            </button>
            <button onclick="separarTareasPorPrioridad(this)" class="filter-btn"
                style="background-color: #4C95E1; color: white;">
                Todos
            </button>
        </div>
        <div class="task-list">
            <div prioridad="{Prioridad}" class="task-card">
                <h3 class="task-title">{Titulo}</h3>
                <p class="task-description">{Descripcion}</p>
                <div class="task-dates">
                    <span>{FechaCreacion}</span>
                    <span>{FechaVencimiento}</span>
                </div>
                <button class="btn_eliminar_tarea" onclick="confirmarEliminacion('{Titulo}')" type="button">
                    Eliminar
                </button>

                <button class="btn_editar_tarea" type="">
                    Editar
                </button>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function separarTareasPorPrioridad(prioridad) {
                // quitar 'active' de todos los botones
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                // agregar 'active' al botón actual
                prioridad.classList.add('active');

                // ocultar todas las tareas
                document.querySelectorAll('.task-card').forEach(element => {
                    element.style.display = 'none';
                });

                let tareas = [];
                const filtro = prioridad.textContent.trim().toLowerCase();
                if (filtro === 'todos') {
                    tareas = document.querySelectorAll('.task-card');
                } else if (filtro === 'bajo') {
                    tareas = document.querySelectorAll('.task-card[prioridad="3"]');
                } else if (filtro === 'medio') {
                    tareas = document.querySelectorAll('.task-card[prioridad="2"]');
                } else if (filtro === 'alto') {
                    tareas = document.querySelectorAll('.task-card[prioridad="1"]');
                }

                tareas.forEach(element => {
                    element.style.display = 'block';
                });
            }


            function eliminar_tarea(
                nombreTarea
            ) {

                let text = `La tarea ${nombreTarea} será eliminada permanentemente.`;
                let title = `Eliminar tarea ${nombreTarea}`;

                confirmarEliminacion(
                    title,
                    text,
                    () => {
                        console.log("Tarea eliminada");
                    },
                    []
                );

            }



            function confirmarEliminacion(
                title,
                text,
                function_aceptar,
                params_aceptar,
                icon = 'warning',
            ) {
                Swal.fire({
                    title: '¿Eliminar tarea?',
                    text: text,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e63946', // Rojo eliminar
                    cancelButtonColor: '#457b9d',  // Azul cancelar
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    background: '#1d1f27',
                    color: '#f1faee'
                }).then((result) => {
                    if (result.isConfirmed) {
                        function_aceptar(...params_aceptar);
                        // Aquí va tu lógica para eliminar la tarea en tu app
                    }
                })
            }

        </script>
    </main>
    <%- include('../partials/footer') %>